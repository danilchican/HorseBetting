<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <display-name>Archetype Created Web Application</display-name>

    <context-param>
        <param-name>uploads.location</param-name>
        <param-value>D:\VLAD\EPAM\Проект\HorseBettingProject\src\main\webapp\uploads</param-value>
    </context-param>
    <error-page>
        <error-code>404</error-code>
        <location>/jsp/errors/404.jsp</location>
    </error-page>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/assets/*</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.epam.horsebetting.filter.CharacterEncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>RouteFilter</filter-name>
        <filter-class>com.epam.horsebetting.filter.RouteFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RouteFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>AuthUserFilter</filter-name>
        <filter-class>com.epam.horsebetting.filter.AuthUserFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthUserFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>AccessGuestFilter</filter-name>
        <filter-class>com.epam.horsebetting.filter.AccessGuestFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AccessGuestFilter</filter-name>
        <url-pattern>/password/*</url-pattern>
        <url-pattern>/auth/login</url-pattern>
        <url-pattern>/auth/register</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>AccessAuthorizedFilter</filter-name>
        <filter-class>com.epam.horsebetting.filter.AccessAuthorizedFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AccessAuthorizedFilter</filter-name>
        <url-pattern>/profile/*</url-pattern>
        <url-pattern>/ajax/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>AccessAdministratorFilter</filter-name>
        <filter-class>com.epam.horsebetting.filter.AccessAdministratorFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AccessAdministratorFilter</filter-name>
        <url-pattern>/dashboard/*</url-pattern>
        <url-pattern>/ajax/dashboard/*</url-pattern>
    </filter-mapping>
    <jsp-config>
        <taglib>
            <taglib-uri>customtags</taglib-uri>
            <taglib-location>/WEB-INF/custom_tags.tld</taglib-location>
        </taglib>
    </jsp-config>
</web-app>